<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCommentAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Autor del comentario"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/textViewCommentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hace 2 horas"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCommentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Contenido del comentario aquí..."
            android:textSize="14sp" />

        <!-- Botones de administración (editar/eliminar) -->
        <LinearLayout
            android:id="@+id/layoutCommentActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewEditComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="@color/primary"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="4dp"
                android:contentDescription="Editar comentario" />

            <ImageView
                android:id="@+id/imageViewDeleteComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="@android:color/holo_red_dark"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Eliminar comentario" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>





